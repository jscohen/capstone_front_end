<h2 class="titleHeader">Your Documents</h2>

{{#each model as |doc|}}
<h1 class="titleHeader">{{doc.title}}</h1>
<br />

<button type="button" class="btn btn-default" aria-label="Left Align" style="color:black;" {{action 'toggle' doc._id}}>
  <span class="NewDoc" style="font-size:2em;">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true">
</span>
<span class="textButton">Edit this doc
</span>
</span>
</button>

<div id={{doc._id}} class="toggle">
{{edit-doc newDoc=doc}}
</div>

<br />
  <button type="button" class="btn btn-default" aria-label="Left Align" style="color:black;" {{action 'deleteDocs' doc}}>
    <span class="NewDoc" style="font-size:2em;">
      <span class="glyphicon glyphicon-remove" aria-hidden="true">
  </span>

    <span class="textButton">Delete this document
  </span>
  </span>
</button>
{{/each}}
